				{
					"fullMedia": {
						"sticky": false,
						"cc": null,
						"ft": {
							"poster": "http://www.ft.com/ig/sites/2015/special-reports/shanghai/media/pierre_cohade-mr.png",
							"source": [
								{
									"src": "http://www.ft.com/ig/sites/2015/special-reports/shanghai/media/pierre_cohade_1280x720.mp4",
