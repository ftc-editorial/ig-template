{
  // `chapters` is an array of your chapters
  // Each chapter has sections, mostly deivided by those full screen width pictures or videos.
  "chapters": [
  // This is your first chapter. It's ususally the story cover.
    {
      // If null, this chapter won't show up on the navigation list
      "navText": null,
      // sections is an array.
      "sections": [
        // This is your first section in the first chapter.
        // Here it's article cover
        {
          // Specify the type of this section. Different types have different markup and style.
          "type": "text-over-media",
          // A cover usually consists of several layers, stacking together.
          // At the bottom is an video.
          // The video should used use H5's video tag; otherwise you cannot get the desired visual effects
          "video": {
            "poster": "the poster image's url",
            "sources": [
              // Multipe sources for different format.
              {
                "format": "one of mp4, webm or ogg",
                "src": "your video url"
              }
            ]
          },
          // Picture is stacked on top of video.
          "picture": {
            // default is used on the img tag
            "default": "growing-pains/cover1.png",
            // Array of image url for different screen size on landscape
            "landscape": [
            ],
            // Array of image url for portrain
            "portrait": [
            ]
          },
          // Text is on top of picture
          "title":{
            // The postion of the postion on scren
            // "`center-center`, `top-left`, `top-right`, `bottom-left`, `bottom-right`",
            "position": "center-center",
            // leadin on above main title
            "superLead": "",
            // Store title. Should appear only once in one page.
            "h1": "成长的烦恼",
            "h2": "",
            "h3": "",
            // leadin below the main title.
            "subLead": ""
          },
          "meta":{
            // authors is an array
            "authors": [],
            "publishedOn": "2017年6月19日",
            "publishedBy": "英国《金融时报》报道"
          },
          // Credits ususally appear at the end of the story. For cover it should be null.
          "credits": null
        }
      ]
    },
    {
      "nav": {
        "text": "navigation text",
        "id": "fragment id"
      },
      "sections": [
        {
          "type": "text-over-media",
          "video": null,
          "picture": {
            "default": "",
            "landscape": [
            ],
            "portrait":[
            ]
          },
          "title": {
            "position":"center-center",
            "superLead": null,
            "h1": null,
            "h2": "",
            "h3": null,
            "subLead": ""
          }
        },
        {
          "type": "two-columns",
          "primaryColumn":[
            {
              "type": "column-text",
              "content": "test"
            },
            {
              "type": "column-image",
              "content": {
                "mobileOnly": false,
                "ratio": "",
                "title": "",
                "link": false,
                "src": "",
                "caption": ""
              }
            },
            {
              "type": "column-video",
              "content": {
                "provider": "cc | ft",
                "title": "",
                "src": "",
                "caption": ""
              }
            }
          ],
          "secondaryColumn": null,
          "ad": ""
        }
      ]
      // end of sections
    }
    // start a new chapter
  ]
}