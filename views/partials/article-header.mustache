<header class="article__header article__section" id="nav-section-0">
  <div class="article__header-container" data-o-grid-row>

    <div class="article__header-wrapper">
        <h1 class="article__header-primary">{{articleHeadline}}</h1>

        <p class="article__header-secondary">{{articleSubhead}}</p>  
    </div>
    
    <div class="article__time-byline">

    {{# publishedDate?}}
      <time class="article__timestamp o-date" data-o-component="o-date" datetime="" title="">{{date}}</time>
    {{/ publishedDate?}}

    {{# byline?}}
      <p class="article__byline">{{byline}}</p>
    {{/ byline?}}

    </div>

  </div>
</header>