<article class="article" role="main">
  <header class="article__header article__section" id="nav-section-0">
    <div class="article__header-primary">
        <h1 class="article__headline">{{articleHeadline}}</h1>

        <p class="article__lead">{{articleLead}}</p>  
    </div>
    
    <div class="article__time-byline">

    {{# publishedDate?}}
      <time class="article__timestamp o-date" data-o-component="o-date" datetime="" title="">{{date}}</time>
    {{/ publishedDate?}}

    {{# byline?}}
      <p class="article__byline">{{byline}}</p>
    {{/ byline?}}
    </div> 
  </header>
    
  {{# sections}}
    <section class="article__section" id="nav-section-{{sectionId}}">

      <div class="section__header">
        <h2 class="section__title">{{sectionTitle}}</h2>
        <p class="section__lead">{{sectionLead}}</p>
      </div>

      <div class="section__container o-grid-row">
        <div class="section__primary-col" data-o-grid-colspan>

        {{# primaryCol}}
          <p>{{paragraph}}</p>

          {{# figure?}}
          <figure class="primary-col__figure">
            <img src="{{{src}}}" class="figure-image">
            <figcaption class="figure-caption">{{caption}}</figcaption>
          </figure>
          {{/ figure?}}

          {{# blockQuote?}}
          <figure class="primary-col__blockquote">
            <blockquote>
            {{quote}} 
            </blockquote>
            <footer>{{footer}}</footer>
          </figure>
          {{/ blockQuote?}}

          {{# video?}}
          <div class="video__container">
            <div class="video__inner">
              <script src="{{{src}}}" type="text/javascript"></script>
            </div>
          </div>
          {{/ video?}}

        {{/ primaryCol}}
        </div>

        {{# secondaryCol?}}
        <aside class="section__secondary-col" data-o-grid-colspan>
          {{# figure}}
          <figure class="secondary-col__figure">
            <img src="{{{src}}}" class="figure-image">
            <figcaption class="figure-caption">{{caption}}</figcaption>
          </figure>
          {{/ figure}}
        </aside>
        {{/ secondaryCol?}}
      </div>
    </section>
    
    {{# adBanner?}}
    <div class="ad-placeholder">
      <div class="ad-container">
        <p class="ad-caption">广告之后 精彩继续</p>
        <div class="ad-body">
          <iframe id="{{adId}}" src="{{{adSrc}}}"></iframe>
        </div>
      </div>
    </div>
    {{/ adBanner?}}

  {{/ sections}}

</article>