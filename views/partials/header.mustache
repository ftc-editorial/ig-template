<header class="o-header{{#lightTheme}} o-header--light{{/lightTheme}}" data-o-component="o-header">

    <div class="o-header__container">

      <div class="o-header__left">
        <div class="o-header__logo">
          <a class="o-header__logo-link" href="/" title="前往FT中文网首页"><span>FT中文网</span><img src="{{{iconsPath}}}svg/brand-ftc-square.svg" target="_blank"></a>
        </div> 
               
        <div class="o-header__series"><span>{{seriesTitle}}</span></div>
      </div>

      <div class="o-header__center">
        {{^ autoNav}}
        <div class="o-header__title">
          <span class="o-header__headline">{{articleCover.headline}}</span>
          {{# englishEdition}}
          <a class="o-header__edition" href="{{{href}}}" target="_blank">{{text}}</a>
          {{/ englishEdition}}   
        </div>
        {{/ autoNav}}
      </div>

      <div class="o-header__right" data-o-component="o-toggle">
        <div class="o-share{{# darkTheme}} o-share--dark{{/ darkTheme}}" data-o-component="o-share"></div>

        <button class="o-header__nav-toggle" data-o-toggle-button aria-controls=".o-header__nav">
          <span>目录</span>
          <svg class="o-icons__hamburger">
            <use xlink:href="#o-icons__hamburger"></use>
          </svg>
          <svg class="o-icons__cross">
            <use xlink:href="#o-icons__cross"></use>
          </svg>
        </button>
        
        <ol class="o-header__nav" data-o-toggle-target>
          {{# sections}}
          <li class="o-header__nav-item">
            <a class="o-header__nav-link" href="#section-{{id}}">{{navText}}{{^navText}}{{sectionHead.title}}{{/navText}}</a>
          </li>
          {{/ sections}}

          {{# englishEdition}}
          <li class="o-header__nav-item mobile">
            <a class="o-header__edition" href="{{{href}}}" target="_blank">{{text}}</a>
          {{/ englishEdition}}
          </li>
        </ol>           
      </div>         
    </div><!-- o-header__container -->    

</header>