<figure class="section__figure{{#mobileOnly}} section__figure--mobile{{/mobileOnly}}" data-media-ratio="{{ratio}}">
	{{# title}}
	<p class="section__figure-title">{{title}}</p>
	{{/ title}}
	
  {{# link}}<a{{/ link}}
  {{^ link}}<div{{/ link}}
  class="lazyload__outer"
  {{# link}}href="{{{link}}}"{{/ link}}>
    <img src="{{{imgSrc}}}" class="section__figure-image lazyload__inner
    {{#scrollmation}}
    o-scrollmation-target
    {{/scrollmation}}"
    {{#scrollmation}}
    data-o-scrollmation-srcset="{{#scrollSet}}{{{.}}} {{/scrollSet}}"
    {{/scrollmation}}>
  {{# link}}</a>{{/ link}}
  {{^ link}}</div>{{/ link}}         
  
  {{# caption}}
  <figcaption class="section__figure-caption">{{caption}}</figcaption>
 	{{/ caption}}
  
</figure>