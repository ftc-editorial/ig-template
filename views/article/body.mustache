{{# sections}}
  <section class="section__container" id="nav-index-{{sectionId}}">

    <div class="section__header">

      <div class="section__header-container" data-o-grid-container>
        <h2 class="section__header-primary">{{title}}</h2>
        <p class="section__header-secondary">{{subTitle}}</p>
      </div><!-- data-o-grid-container -->
      {{# sectionCover}}
        {{> partials/cover-media}}
      {{/ sectionCover}}
    </div><!-- section__header -->
    
    {{# sectionBlock}}
    <div class="section__block{{#scrollmation}} section__block--scrollmation{{/scrollmation}}">

      {{# fullspanMedia}}
          {{> partials/fullspan-media}}
      {{/ fullspanMedia}}

      <div class="section__block-content" data-o-grid-container>
        <div data-o-grid-row>
          <div class="section__col-primary" data-o-grid-col>
          {{# colPrimary}}
          
            {{# text}}
            <p>{{{.}}}</p>
            {{/ text}}

            {{# figure}}
              {{> partials/figure}}
            {{/ figure}}

            {{# video}}
            <div class="lazyload__outer section__video-container" data-media-ratio="6/19">
              <div class="lazyload__inner">
                {{# cc}}
                <script src="{{{src}}}" type="text/javascript"></script>
                {{/ cc}}

                {{# ft}}
                <video class="section__video" preload="metadata" controls poster="{{{poster}}}">
                  {{# source}}
                  <source src="{{{src}}}" type="{{{type}}}">
                  {{/ source}}
                </video>
                {{/ ft}}

              </div>
            </div>
            {{/ video}}

            {{# blockQuote}}
            <figure class="section__blockquote">
              <blockquote class="section__blockquote-text">
              {{text}} 
              </blockquote>
              <footer class="section__blockquote-caption">{{caption}}</footer>
            </figure>
            {{/ blockQuote}}

            {{# readMore}}
            <div class="section__more-on">
              {{> partials/figure}}              
              {{> partials/more-on}}    
            </div>
            {{/ readMore}}

          {{/ colPrimary}}
          </div><!-- col-primary -->

          {{# colSecondary}}
          <aside class="section__col-secondary" data-o-grid-col>

            {{# figure}}
              {{> partials/figure}}
            {{/ figure}}

          </aside>
          {{/ colSecondary}}   

        </div><!-- data-o-grid-row -->        
      </div><!-- data-o-grid-container-->        

    </div>
    {{/ sectionBlock}}
  </section>
  
  {{# adBanner}}
    {{> partials/ad}}
  {{/ adBanner}}

{{/ sections}}