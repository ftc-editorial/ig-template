<section class="section" id="section-{{id}}">
  
  {{# sectionBlocks}}
  <div class="section-block
  {{#scrollmation}}ig-scrollmation{{/scrollmation}}
  {{#viewportHeight}}viewport-height{{/viewportHeight}}">
{{!-- when section-block has .ig-scrollmation, .section-media should be absolutely position to top, 100vh. text-over-media shoulde be auto height.
when .section-block has .viewport-height, .section-media should be absolutely positioned, 100% width and height, has an overlay.

 --}}    
    {{# sectionMedia}}
    <div class="section-media
    {{#scrollmation}}ig-scrollmation__sticky{{/scrollmation}}">
      {{> partials/ig-media}}
    </div>
    {{/ sectionMedia}}
{{!-- If section-block has .viewport-height, it must mean text-over-media should be 100% width and height. .section-media should be asbolutely positioned. --}}
    {{# textOverMedia}}
    <div class="section-text-over-media" data-o-grid-container>
      {{# head}}
        {{> partials/ig-head}}
      {{/ head}}

      {{# text}}
      <p>{{{.}}}</p>
      {{/ text}}
      
      {{# credits}}
        {{> partials/ig-credits}}
      {{/ credits}}
    </div>
    {{/ textOverMedia}}

    {{# cols}}
    <div class="section-cols" data-o-grid-container>
      <div data-o-grid-row>
        <div class="section-col__primary" data-o-grid-col>
        {{# colPrimary}}
          {{# text}}
          <p>{{{.}}}</p>
          {{/ text}}

          {{# image}}
            {{> partials/ig-image}}
          {{/ image}}
          
          {{# video}}
            {{> partials/ig-video}}
          {{/ video}}

          {{# quote}}
            {{> partials/ig-quote}}
          {{/ quote}}

          {{# readMore}}
            {{> partials/ig-more}}
          {{/ readMore}}
        {{/ colPrimary}}
        </div>
        
        {{# colSecondary}}
        <div class="section-col__secondary" data-o-grid-col>
          
          <div class="section-col__secondary-inner ig-scrollmation">

            <div class="viewport-height ig-scrollmation__sticky">
            {{# image}}
              {{> partials/ig-image}}
            {{image}}
            </div>
            
          </div>
          
        </div>
        {{/ colSecondary}}
      </div>
    </div>
    {{/ cols}}

  </div>
  {{/ sectionBlocks}}

  {{# ad}}
    {{> partials/ad}}
  {{/ ad}}
</section>