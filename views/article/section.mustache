{{# sections}}
  <section class="section__container" id="section-{{id}}">

    <div class="section__head">

      <div class="section__head-container" data-o-grid-container>
        <h2 class="section__head-primary">{{title}}</h2>
        <p class="section__head-secondary">{{subTitle}}</p>
      </div><!-- data-o-grid-container -->

      {{# sectionCover}}
      <div class="fullspan-media__container">
        {{> partials/media}}
      </div>  
      {{/ sectionCover}}

    </div><!-- section__header -->
    
    {{# sectionBody}}
    <div class="section__body"{{#fullspanMedia.sticky}} data-o-component="o-sticky"{{/fullspanMedia.sticky}}>

      {{# fullspanMedia}}
      <div class="section__fullspan-media"{{#ccVideo}} data-source="cc"{{/ccVideo}}{{#sticky}} data-o-sticky-target{{/sticky}}>
        {{> partials/media}}
      </div>
      {{/ fullspanMedia}}

      <div class="section__body-container" data-o-grid-container>
        <div data-o-grid-row>
          <div class="section__col-primary" data-o-grid-col>
          {{# colPrimary}}
          
            {{# text}}
            <p>{{{.}}}</p>
            {{/ text}}

            {{# figure}}
              {{> partials/figure}}
            {{/ figure}}

            {{# video}}
              {{> partials/video}}
            {{/ video}}

            {{# blockQuote}}
              {{> partials/blockquote}}
            {{/ blockQuote}}

            {{# readMore}}
            <div class="section__more-on">
              {{> partials/figure}}              
              {{> partials/more-on}}    
            </div>
            {{/ readMore}}

          {{/ colPrimary}}
          </div><!-- col-primary -->

          {{# colSecondary}}
          <aside class="section__col-secondary" data-o-grid-col{{#sticky}} data-o-component="o-sticky"{{/sticky}}>

            <div class="o-sticky-target" {{#sticky}} data-o-sticky-target{{/sticky}}>
            {{# figure}}
              {{> partials/figure}}
            {{/ figure}}  
            </div>
            
          </aside>
          {{/ colSecondary}}   

        </div><!-- data-o-grid-row -->        
      </div><!-- data-o-grid-container-->        

    </div>
    {{/ sectionBody}}
  </section>
  
  {{# adBanner}}
    {{> partials/ad}}
  {{/ adBanner}}

{{/ sections}}