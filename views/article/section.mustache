{{# sections}}
  <section class="article__section"{{# sectionHeader?}} id="nav-index-{{sectionId}}{{/ sectionHeader?}}">

    {{# sectionHeader?}}
    <div class="section__header">

      {{# headerTitle?}}
      <div class="section__header-container" data-o-grid-container>
        <h2 class="section__header-primary">{{title}}</h2>
        <p class="section__header-secondary">{{subTitle}}</p>
      </div><!-- data-o-grid-container -->
      {{/ headerTitle?}}

      {{> background-media}}

    </div><!-- section__header -->
    {{/ sectionHeader?}}

    <div class="section__body" data-o-grid-container>
      <div data-o-grid-row>

        <div class="section__col-primary" data-o-grid-col>
        {{# colPrimary}}
          {{# text?}}
          <p>{{{.}}}</p>
          {{/ text?}}

          {{# figure?}}
          <figure class="section__figure{{#mobileOnly?}} section__figure--mobile{{/mobileOnly?}}">
            <div class="lazyload__outer" data-media-ratio="3/4">
              <img src="{{{src}}}" class="section__figure-image lazyload__inner">
            </div>
            
            <figcaption class="section__figure-caption">{{caption?}}</figcaption>
          </figure>
          {{/ figure?}}

          {{# blockQuote?}}
          <figure class="section__blockquote">
            <blockquote class="section__blockquote-text">
            {{quote}} 
            </blockquote>
            <footer class="section__blockquote-caption">{{footer}}</footer>
          </figure>
          {{/ blockQuote?}}

          {{# video?}}
          <div class="lazyload__outer section__video-container" data-media-ratio="6/19">
            <div class="lazyload__inner">
              {{# cc?}}
              <script src="{{{src}}}" type="text/javascript"></script>
              {{/ cc?}}

              {{# ft?}}
              <video class="section__video" preload="metadata" controls poster="{{{poster}}}">
                {{# source}}
                <source src="{{{src}}}" type="{{{type}}}">
                {{/ source}}
              </video>
              {{/ ft?}}

            </div>
          </div>
          {{/ video?}}

          {{# readMore?}}
          <div class="section__read-more">
            <a class="lazyload__outer" data-media-ratio="6/19" href="{{{href}}}">
              <img class="lazyload__inner" src="{{{src}}}">
            </a>

            <h3 class="section__read-more-title">{{title}}</h3>
            <ul class="section__read-more-items">
              {{# items}}
                <li><a href="{{{href}}}">{{name}}</a></li>
              {{/ items}}
            </ul>        
          </div>
          {{/ readMore?}}

        {{/ colPrimary}}
        </div><!-- col-primary -->

        {{# colSecondary?}}
        <aside class="section__col-secondary" data-o-grid-col>
          {{# figure}}
          <figure class="section__figure">
            <div class="lazyload__outer" data-media-ratio="3/4">
              <img src="{{{src}}}" class="section__figure-image lazyload__inner">
            </div>
            
            <figcaption class="section__figure-caption">{{caption}}</figcaption>
          </figure>
          {{/ figure}}
        </aside>
        {{/ colSecondary?}}   

      </div><!-- data-o-grid-row -->
    </div><!-- data-o-grid-container -->

  </section>
  
  {{# adBanner?}}
    {{> ad}}
  {{/ adBanner?}}

{{/ sections}}